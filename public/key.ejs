                </div>
            </div>

        </header><!-- /header -->
        <!-- Header-->

        <div class="breadcrumbs">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1>Tổng quan</h1>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="page-header float-right">
                    <div class="page-title">
                        <ol class="breadcrumb text-right">
                            <li class="active">Tổng quan</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>

        <div class="content mt-3">
            <div class="animated fadeIn">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <strong class="card-title">Tạo key captcha</strong>
                            </div>
                            <div class="card-body">
                              <div id="pay-invoice">
                                  <div class="card-body">
                                      <form >
                                        <div class="form-group has-success">
                                            <span>Tổng captcha của bạn: </span>
                                            <span>{{captcha}}</span>
                                        </div>
                                          <div class="form-group has-success">
                                              <label for="cc-name" class="control-label mb-1">Số captcha</label>
                                              <input id="cc-name" ng-model="numberCaptcha" type="number" class="form-control">
                                          </div>
                                          <div class="form-group">
                                              <label for="cc-number" class="control-label mb-1">Thông tin</label>
                                              <input id="cc-number" ng-model="description" type="tel" class="form-control" >
                                          </div>
                                          <div>
                                              <button id="payment-button" class="btn btn-lg btn-info btn-block">
                                                  <span id="payment-button-amount" ng-click="clickCreateKey()">Tạo key</span>
                                              </button>
                                          </div>
                                      </form>
                                  </div>
                              </div>
                            </div>
                        </div> 
                    </div>

                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <strong class="card-title">Bảng key</strong>
                                <span style="margin-left:20px;cursor: pointer;" ng-click="clickGetCaptcha()" >Tải lại</span>
                            </div>
                            <div class="card-body">
                    <table id="bootstrap-data-table" class="table table-striped table-bordered">
                        <thead>
                        <tr>
                            <th width="30px">ID</th>
                            <th>Key</th>
                            <th>Captcha</th>
                            <th>Thông tin</th>
                            <th></th>
                            <th></th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr ng-repeat="(index, key) in keys track by key.id" ng-init="key.showEdit=false">
                            <td>{{index}}</td>
                            <td>
                                <!-- <span ng-hide="key.showEdit">{{key.key}}</span>
                                <input type="" ng-model="key.key" ng-show="key.showEdit"> -->                                
                                <span>{{key.key}}</span>
                            </td>
                            <td>
                                <span ng-hide="key.showEdit">{{key.captcha}}</span>
                                <input type="" ng-model="key.captcha" ng-show="key.showEdit">
                            </td>
                            <td>
                                <span ng-hide="key.showEdit">{{key.description}}</span>
                                <input type="" ng-model="key.description" ng-show="key.showEdit">
                            </td>
                            <td> 
                                <span ng-click="clickEditOrSave(key)">
                                    Sửa
                                </span>
                            </td>
                            <td>
                                <span ng-click="clickDelete(key)">
                                    Xóa
                                </span>
                            </td>
                            <td>
                                <span ng-click="clickReload(key)">
                                    Reload
                                </span>
                            </td>
                        </tr>
                        </tbody>
                    </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div><!-- .animated -->
        </div>

    <div id="right-panel" class="right-panel">

        <!-- Header-->
        <header id="header" class="header">

            <div class="header-menu">

                <div class="col-sm-7">

                </div>

                <div class="col-sm-5">
                    <a class="float-right nav-link" href="/cai-dat"><i class="fa fa -cog"></i>Cài đặt</a>   
